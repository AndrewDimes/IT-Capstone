@model List<ITCapstoneQuery.Data.orders>
@{
    ViewData["Title"] = "Customer History";
}

<h1 style="text-align: center;"> Order history for email @ViewBag.email</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zip</th>
            <th scope="col">Items</th>
            <th scope="col">Total</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) {
            if(item.email == ViewBag.email){
                <tr>
                    <td>@item.name</td>
                    <td>@item.email</td>
                    <td>@item.address</td>
                    <td>@item.city</td>
                    <td>@item.state</td>
                    <td>@item.zip</td>
                    <td>@item.items</td>
                    <td>$@item.price</td>
                </tr>
            }
                    
        }
    </tbody>
</table>
