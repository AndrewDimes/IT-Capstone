@model List<ITCapstoneQuery.Data.Order>
@{
    ViewData["Title"] = "Customer History";
}

<h1 style="text-align: center;"> Order history for id # @ViewBag.Id</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Subtotal</th>
            <th scope="col">Tax</th>
            <th scope="col">Shipping</th>
            <th scope="col">Total</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Address Continued</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Country</th>
            <th scope="col">Ordered At</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model) {
            if(@ViewBag.Id == @item.Userid.ToString()){
                <tr>
                    <td>@item.Id</td>
                    <td>@item.subTotal</td>
                    <td>@item.tax</td>
                    <td>@item.shipping</td>
                    <td>@item.total</td>
                    <td>@item.firstName</td>
                    <td>@item.lastName</td>
                    <td>@item.email</td>
                    <td>@item.line1</td>
                    <td>@item.line2</td>
                    <td>@item.city</td>
                    <td>@item.province</td>
                    <td>@item.country</td>
                    <td>@item.createdAt</td>
                </tr>
            }          
        }
    </tbody>
</table>
